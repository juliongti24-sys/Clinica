<%- include('../templates/header') %>

<main>
    <section class="container page-section">
        <h1 class="page-title">Crear Nuevo Usuario</h1>
        
        <div class="booking-form-container card">
            
            <form id="createUserForm" action="/admin/crear-usuario" method="POST" class="form-step active" style="padding: 2rem;" enctype="multipart/form-data">

                <div class="form-group">
                    <label for="role">Tipo de Usuario (Rol)</label>
                    <select id="roleSelect" name="role" class="form-control" required>
                        <option value="">Seleccione un rol...</option>
                        <option value="medico">Médico</option>
                        <option value="recepcionista">Recepcionista</option>
                        <option value="administrador">Administrador</option>
                    </select>
                </div>

                <hr>
                <h2 style="font-size: 1.2rem; margin-bottom: 1rem;">Datos Personales</h2>

                <div class="form-group">
                    <label for="nombre">Nombre Completo</label>
                    <input type="text" id="nombre" name="nombre" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="password">Contraseña Provisional</label>
                    <input type="password" id="password" name="password" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="direccion">Dirección</label>
                    <input type="text" id="direccion" name="direccion" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="telefono">Teléfono</label>
                    <input type="tel" id="telefono" name="telefono" class="form-control" required>
                </div>

                <div id="medicoFields" style="display: none;">
                    <hr>
                    <h2 style="font-size: 1.2rem; margin-bottom: 1rem;">Datos de Médico</h2>
                    <div class="form-group">
                        <label for="especialidad">Especialidad</label>
                        <input type="text" id="especialidad" name="especialidad" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="cedula">Cédula Profesional</label>
                        <input type="text" id="cedula" name="cedula" class="form-control">
                    </div>
                </div>

            <div class="form-group">
                <label for="foto">Foto de perfil</label>
                <input type="file" name = "foto" id="foto" class="form-control mb-3" required>
            </div>


                <div style="margin-top: 1.5rem; display: flex; justify-content: space-between;">
                    <a href="/admin/dashboard" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-primary">Registrar Usuario</button>
                </div>
            </form>
        </div>
    </section>
</main>

<script>
    document.getElementById('roleSelect').addEventListener('change', function() {
        var medicoFields = document.getElementById('medicoFields');
        var especialidadInput = document.getElementById('especialidad');
        var cedulaInput = document.getElementById('cedula');

        if (this.value === 'medico') {
            medicoFields.style.display = 'block';
            especialidadInput.setAttribute('required', 'true');
            cedulaInput.setAttribute('required', 'true');
        } else {
            medicoFields.style.display = 'none';
            especialidadInput.removeAttribute('required');
            cedulaInput.removeAttribute('required');
        }
    });
</script>

<%- include('../templates/footer') %>